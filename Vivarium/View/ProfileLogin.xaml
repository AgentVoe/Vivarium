<Window x:Class="Vivarium.View.ProfileLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vivarium.WPFforms"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800" ResizeMode="NoResize">
    <Grid Background="#FF9F806E">
        <TextBox x:Name="LoginBox" Background="Transparent" Opacity="0.5" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Width="146" TextChanged="TextBox_TextChanged" Height="18" Margin="0,181,0,0"/>
        <TextBox x:Name="PasswordBox" Background="Transparent" Opacity="0.5" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Center" Width="146"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,142,0,0" TextWrapping="Wrap" Text="Введите логин и пароль для входа в личный кабинет:" VerticalAlignment="Top" Height="34" Width="164"/>
        <Button x:Name="EnterButton" Content="Войти" HorizontalAlignment="Center" Margin="0,231,0,0" VerticalAlignment="Top" Width="84" Click="EnterButton_Click" Height="26" Background="#FFF4EEEE"/>
    </Grid>
</Window>