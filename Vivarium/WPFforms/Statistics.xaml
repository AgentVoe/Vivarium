                <TextBlock HorizontalAlignment="Left" Margin="80,610,0,0" Text="Любимые жанры" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
                <LiveCharts:PieChart x:Name="FavoriteGenres" Series="{Binding SeriesGenres}" LegendLocation="Right" InnerRadius="50" Margin="0,674,770,412">
                    <LiveCharts:PieChart.ChartLegend>
                        <LiveCharts:DefaultLegend BulletSize="20"></LiveCharts:DefaultLegend>
                    </LiveCharts:PieChart.ChartLegend>
