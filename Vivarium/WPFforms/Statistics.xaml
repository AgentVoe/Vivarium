                <TextBlock x:Name="GenresResult" Margin="161,756,1035,0" Text="50" FontSize="16" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Top" />
            </Grid>
            <Grid>
                <Rectangle HorizontalAlignment="Right" Width="590" Fill="White" Height="312" VerticalAlignment="Top" RadiusX="12" RadiusY="12" Margin="0,586,50,0"/>
